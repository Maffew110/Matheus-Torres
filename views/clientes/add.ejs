     <%-include('../cabecalho.ejs')%>
     <header>
        <h3>Adicionar Novo Cliente</h3>
      </header>
      <div class="content">
        <form id="form-instrumento" method="post" autocomplete="off" action="/clientes/add/ok">
          <div class="grid">
            <div>
              <label for="nome">Nome do Cliente</label>
              <input id="nome" name="nome" type="text" placeholder="Ex: João Silva" required>
            </div>

             <div>
              <label for="cpf">CPF do Cliente</label>
              <input id="cpf" name="cpf" type="text" placeholder="Ex: 123.456.789-00" required>
            </div>

            <div>
              <label for="telefone">Telefone do Cliente</label>
              <input id="telefone" name="telefone" type="text" placeholder="Ex: (11) 91234-5678" required>
            </div>

            <div>
              <label for="email">Email do Cliente</label>
              <input id="email" name="email" type="email" placeholder="Ex: joao@exemplo.com" required>
            </div>

           <div class="field-help">Os campos com * são obrigatórios.</div>
          <footer>
            <a type="button" class="btn ghost" id="btn-cancelar" href="/clientes/lst">Cancelar</a>
            <button type="submit" class="btn primary">Adicionar Cliente</button>
          </footer>
        </form>
      </div>

      <%-include('../rodape.ejs')%>